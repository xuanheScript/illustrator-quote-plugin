<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
    Version="12.0"
    ExtensionBundleId="com.illustrator.quote.panel"
    ExtensionBundleVersion="1.0.0"
    ExtensionBundleName="Illustrator Quote Plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.adobe.com/schemas/ExtensionManifest.xsd">

  <ExtensionList>
    <Extension Id="com.illustrator.quote.panel" Version="1.0.0" />
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <!-- CEP 12 supports Illustrator 2025 and later -->
      <Host Name="ILST" Version="[29.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="12.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.illustrator.quote.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>
          <!-- 如果要有入口脚本，可以保留一个 ScriptPath -->
          <!-- <ScriptPath>./jsx/init.jsx</ScriptPath> -->
          <CEFCommandLine>
            <Parameter>--remote-debugging-port=8088</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--disable-web-security</Parameter>
            <Parameter>--enable-nodejs</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Illustrator Quote</Menu>
          <Geometry>
            <Size>
              <Height>400</Height>
              <Width>320</Width>
            </Size>
            <MinSize>
              <Height>300</Height>
              <Width>280</Width>
            </MinSize>
            <MaxSize>
              <Height>600</Height>
              <Width>400</Width>
            </MaxSize>
          </Geometry>
          <Icons>
            <Icon Type="Normal">./icons/icon.png</Icon>
            <Icon Type="RollOver">./icons/icon.png</Icon>
            <Icon Type="DarkNormal">./icons/icon.png</Icon>
            <Icon Type="DarkRollOver">./icons/icon.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>

</ExtensionManifest>
